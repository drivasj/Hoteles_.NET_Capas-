
@{
    ViewBag.Title = "Index";
}


<h3 style="color: #4f5b69; "><em>Listado Personas</em></h3>

<h2 id="lblTituloForm" class=""></h2>
<hr style="color: #0056b2;" />

<!-- Button trigger modal -->
<button type="button" onclick="Editar(0)" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Nuevo
</button>

@Html.ActionLink("Excel", "GenerarExcel", "Persona", null, new { @class = "btn btn-primary  mb-3", @target = "_blank" })

<div class="input-group mb-3">
    <select onchange="filtrarPersonaTipousuario()" class="form-control" id="cboTipoUsuario">
    </select>
</div>


<div id="divTabla">

</div>

<!-- Modal   modal-lg-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frmPersona" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="mt-3 mb-3 col-md-6">
                            <label> Id Persona</label>
                            <input readonly type="text" class="form-control" name="iidpersona" />
                        </div>
                        <div class="mt-3 mb-3 col-md-6">
                            <label> Nombre</label>
                            <input type="text" class="form-control o" name="nombre" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="mt-3 mb-3 col-md-6">
                            <label> Apellido Paterno</label>
                            <input type="text" class="form-control o" name="apellidoPaterno" />
                        </div>
                        <div class="mt-3 mb-3 col-md-6">
                            <label> Apellido Materno</label>
                            <input type="text" class="form-control o" name="apellidoMaterno" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="mt-3 mb-3 col-md-6">
                            <label>Teléfono fijo</label>
                            <input type="text"
                                   onkeypress="validarSoloNumeros(event)"
                                   name="telefono" class="form-control snc o" />
                        </div>
                        <div class="mt-3 mb-3 col-md-6">
                            <label>Tipo Usuario</label>
                            <select id="cboTipousuarioForm" class="form-control o" name="iidtipousuario"></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mt-3 mb-3 col-md-6 o-1">
                            <input type="radio" id="rbMas" name="iidsexo" value="1" /> <label>Masculino</label>
                            <input type="radio" id="rbFem" name="iidsexo" value="2" /> <label>Femenino</label>
                        </div>
                        <div class="mt-3 mb-3 col-md-6">
                            <div>Foto</div>
                            <img class="o" width="100" height="100" id="imgFoto" name="fotobase64" />
                            <input accept=".jpg,.png" type="file" id="fupFoto" name="fotopersona" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="o-2 col-md-6">
                            <!--0-1 Al menos 1 obligatorio-->
                            <p>Seleccione los gustos</p>
                            <input type="checkbox" name="valor[]" value="1" /> <label>Jugar</label>
                            <input type="checkbox" name="valor[]" value="2" /> <label>Correr</label>
                            <input type="checkbox" name="valor[]" value="3" /> <label>Comer</label>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <p>Nombre Usuario</p>
                            <input type="text" name="nombreusuario" class="form-control  o" />
                        </div>
                        <div class="col-md-6" id="divcontra">
                            <p>Contraseña</p>
                            <input type="password" name="contra" class="form-control  o" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" id="btnCerrar" data-bs-dismiss="modal">Cerrar</button>
                        <button type="button" onclick="Guardar()" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/sweetalert.js"></script>
<script src="~/Scripts/generic.js"></script>
<script src="~/Scripts/persona.js"></script>
